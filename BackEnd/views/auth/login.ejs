<% if (errors) {%>
  <% errors.forEach(function (error) { %>
    <%= __(error) %>
  <% }) %>
<% } %>

<form role="form" action="/auth/local" method="post">
  <input type="text" name="identifier" placeholder="Usuario o Correo">
  <input type="password" name="password" placeholder="ContrseÃ±a">
  <button type="submit">Sign in</button>
</form>

<% if (Object.keys(providers).length) {%>
  <h4>Tambien puedes usar las siguientes opciones:</h4>

  <% Object.keys(providers).forEach(function (key) { %>
    <a href="/auth/<%= providers[key].slug %>" role="button"><%= providers[key].name %></a>
  <% }) %>
<% } %>
